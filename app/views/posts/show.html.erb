<div class = "postsshow">
  <div>
    <%= @post.content %>
    <%= @user.name%>
  </div>
  <% if current_user.id == @post.user_id %>
    <div class = "edit_bot">
      <%= link_to("編集", edit_post_path(@post)) %>
      <%= link_to("削除",post_path(@post),{method: :delete, class: "destroylink",data: { confirm: '本当にいいですか?' }}) %>
    </div>
  <%end%>
</div>
<div>
  <h2>コメント一覧</h2>
<% @comments.each do |c| %>
  <div>
    <%= link_to("#{c.user.name}", edit_user_registration_path) %>
    <%= c.comment_content %>
    <hr>
  </div>
<% end %>

<%= form_with model: [@post, @comment] do |f| %>
  <%= f.text_field :comment_content %>
  <%= f.hidden_field :post_id, value: @post.id %> #追加
  <br>
  <%= f.submit 'コメントする' %>
<% end %>
</div>
<div>
  <%=link_to("戻る",root_path)%>
</div>
