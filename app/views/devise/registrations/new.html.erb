<%= render "devise/shared/error_messages", resource: resource %>
<h2 id="devise_new_title">新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div id="iuy">
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em><% @minimum_password_length %></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <label>
        <%= f.submit "ログイン", style:"display:none" %>
        <span class="form_actions_submit">登録する</span>
      </label>
    </div>
    
    <div class="actions new_member_registration">
      <%= link_to "ログイン","/users/sign_in"%>
    </div>
  </div>

<% end %>


